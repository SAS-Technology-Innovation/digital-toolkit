{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "node scripts/build-vercel.js",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/signage",
      "destination": "/signage.html"
    }
  ],
  "headers": [
    {
      "source": "/api/data",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=300, stale-while-revalidate=60"
        }
      ]
    },
    {
      "source": "/api/ai",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}
